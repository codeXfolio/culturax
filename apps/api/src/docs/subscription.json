  "/api/subscription/monetization/settings": {
    "post": {
      "tags": ["Subscription"],
      "summary": "Set monetization settings",
      "description": "Sets or updates monetization settings for a creator",
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["userId", "price"],
              "properties": {
                "userId": {
                  "type": "string",
                  "description": "ID of the creator",
                  "example": "123e4567-e89b-12d3-a456-426614174000"
                },
                "price": {
                  "type": "number",
                  "description": "Subscription price",
                  "example": 10.99
                },
                "description": {
                  "type": "string",
                  "description": "Description of the subscription benefits",
                  "example": "Get access to exclusive content and early releases"
                },
                "perks": {
                  "type": "string",
                  "description": "List of perks for subscribers",
                  "example": "Early access, Exclusive content, Direct messaging"
                },
                "payoutSchedule": {
                  "type": "string",
                  "enum": ["MONTHLY", "WEEKLY", "BIWEEKLY"],
                  "description": "Payout schedule for earnings",
                  "example": "MONTHLY"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Monetization settings updated successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "example": true
                  },
                  "data": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "example": "123e4567-e89b-12d3-a456-426614174000"
                      },
                      "price": {
                        "type": "number",
                        "example": 10.99
                      },
                      "description": {
                        "type": "string",
                        "example": "Get access to exclusive content and early releases"
                      },
                      "perks": {
                        "type": "string",
                        "example": "Early access, Exclusive content, Direct messaging"
                      },
                      "payoutSchedule": {
                        "type": "string",
                        "example": "MONTHLY"
                      },
                      "userId": {
                        "type": "string",
                        "example": "123e4567-e89b-12d3-a456-426614174000"
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-01-01T00:00:00Z"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Bad request",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "example": false
                  },
                  "error": {
                    "type": "string",
                    "example": "Only creators can edit monetization settings"
                  }
                }
              }
            }
          }
        },
        "404": {
          "description": "Monetization settings not found",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "example": false
                  },
                  "error": {
                    "type": "string",
                    "example": "Monetization settings not found"
                  }
                }
              }
            }
          }
        }
      }
    },
