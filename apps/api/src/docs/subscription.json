{
  "/api/subscription/create": {
    "post": {
      "tags": ["Subscription"],
      "summary": "Create a new subscription",
      "description": "Creates a new subscription between a subscriber and a creator using the creator's monetization settings price",
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["subscriberId", "creatorId"],
              "properties": {
                "subscriberId": {
                  "type": "string",
                  "description": "ID of the subscriber",
                  "example": "123e4567-e89b-12d3-a456-426614174000"
                },
                "creatorId": {
                  "type": "string",
                  "description": "ID of the creator",
                  "example": "987fdebc-a654-3210-9876-543210987654"
                }
              }
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Subscription created successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "example": true
                  },
                  "data": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "example": "123e4567-e89b-12d3-a456-426614174000"
                      },
                      "amount": {
                        "type": "number",
                        "description": "Subscription amount from creator's monetization settings",
                        "example": 10.99
                      },
                      "subscriberId": {
                        "type": "string",
                        "example": "123e4567-e89b-12d3-a456-426614174000"
                      },
                      "creatorId": {
                        "type": "string",
                        "example": "987fdebc-a654-3210-9876-543210987654"
                      },
                      "subscriber": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "123e4567-e89b-12d3-a456-426614174000"
                          },
                          "name": {
                            "type": "string",
                            "example": "John Doe"
                          },
                          "username": {
                            "type": "string",
                            "example": "johndoe"
                          },
                          "avatar": {
                            "type": "string",
                            "example": "/uploads/avatars/0x1234567890abcdef/avatar.jpg"
                          }
                        }
                      },
                      "creator": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "987fdebc-a654-3210-9876-543210987654"
                          },
                          "name": {
                            "type": "string",
                            "example": "Jane Smith"
                          },
                          "username": {
                            "type": "string",
                            "example": "janesmith"
                          },
                          "avatar": {
                            "type": "string",
                            "example": "/uploads/avatars/0x9876543210fedcba/avatar.jpg"
                          }
                        }
                      },
                      "startDate": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-01-01T00:00:00Z"
                      },
                      "status": {
                        "type": "string",
                        "example": "ACTIVE"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Bad request",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "example": false
                  },
                  "error": {
                    "type": "string",
                    "example": "Creator has not set up monetization settings"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
