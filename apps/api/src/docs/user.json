  "/api/user/register": {
    "post": {
      "tags": ["User"],
      "summary": "Register a new user",
      "description": "Registers a new user with the provided email, name, username, address, and optional avatar URL",
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "email",
                "name",
                "username",
                "address",
                "accountType"
              ],
              "properties": {
                "email": {
                  "type": "string",
                  "example": "john.doe@example.com"
                },
                "name": {
                  "type": "string",
                  "example": "John Doe"
                },
                "username": {
                  "type": "string",
                  "example": "johndoe"
                },
                "address": {
                  "type": "string",
                  "example": "0x1234567890abcdef"
                },
                "accountType": {
                  "type": "string",
                  "example": "USER"
                },
                "avatar": {
                  "type": "string",
                  "description": "URL of the user's avatar image (optional)",
                  "example": "https://example.com/avatar.jpg"
                }
              }
            }
          }
