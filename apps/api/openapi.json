{
  "openapi": "3.0.0",
  "info": {
    "title": "CulturaX API",
    "version": "1.0.0",
    "description": "API for managing entire platform"
  },
  "tags": [
    {
      "name": "Creator",
      "description": "Operations related to creators"
    },
    {
      "name": "User",
      "description": "Operations related to users"
