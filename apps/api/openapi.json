    "/api/user/follow": {
      "post": {
        "tags": ["User"],
        "summary": "Follow a user",
        "description": "Allows a user to follow another user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userAddress": {
                    "type": "string",
                    "example": "0x1234567890abcdef"
                  },
                  "targetAddress": {
                    "type": "string",
                    "example": "0xabcdef1234567890"
                  }
                },
                "required": ["userAddress", "targetAddress"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number",
                          "example": 1
                        },
                        "followerId": {
                          "type": "string",
                          "example": "123e4567-e89b-12d3-a456-426614174000"
                        },
                        "followingId": {
                          "type": "string",
                          "example": "987fdebc-a654-3210-9876-543210987654"
                        },
                        "createdAt": {
                          "type": "string",
                          "example": "2021-01-01T00:00:00Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "User not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/ai/generate-caption": {
      "post": {
        "tags": ["AI"],
        "summary": "Generate AI caption",
        "description": "Generates a caption and hashtags based on the provided description and tone",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "description": {
                    "type": "string",
                    "example": "A sunset photo at the beach"
                  },
                  "tone": {
                    "type": "string",
                    "example": "inspirational"
                  },
                  "totalHashtags": {
                    "type": "number",
                    "example": 5
                  }
                },
                "required": ["description", "tone", "totalHashtags"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "caption": {
                      "type": "string",
                      "example": "Nature's canvas paints a masterpiece as the sun bids farewell, reminding us that every ending brings a beautiful new beginning."
                    },
                    "hashtags": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "example": [
                        "#sunset",
                        "#beachvibes",
                        "#naturephotography",
                        "#inspiration",
                        "#peaceful"
                      ]
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "message": {
                      "type": "string",
                      "example": "Internal Server Error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/collection/upload": {
      "post": {
        "tags": ["Collection"],
        "summary": "Upload a new collection",
        "description": "Upload a collection with images and metadata",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "title",
                  "description",
                  "tags",
                  "userId",
                  "images"
                ],
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "Collection title"
                  },
                  "description": {
                    "type": "string",
                    "description": "Collection description"
                  },
                  "tags": {
                    "type": "string",
                    "description": "JSON string array of tags"
                  },
                  "userId": {
                    "type": "string",
                    "description": "User ID who owns the collection"
                  },
                  "images": {
                    "type": "string",
                    "format": "binary",
                    "description": "Zip file containing collection images"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Collection uploaded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "title": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        },
                        "tags": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "userId": {
                          "type": "string"
                        },
                        "createdAt": {
                          "type": "string",
                          "format": "date-time"
                        },
                        "updatedAt": {
                          "type": "string",
                          "format": "date-time"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
