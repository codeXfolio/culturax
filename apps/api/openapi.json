{
  "openapi": "3.0.0",
  "info": {
    "title": "CulturaX API",
    "version": "1.0.0",
    "description": "API for managing entire platform"
  },
  "paths": {
    "/api/creator": {
      "get": {
        "summary": "Get all creators",
        "description": "Retrieves a list of all creators",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "123e4567-e89b-12d3-a456-426614174000"
                          },
                          "name": {
                            "type": "string",
                            "example": "John Doe"
                          },
                          "username": {
                            "type": "string",
                            "example": "johndoe"
                          },
                          "avatar": {
                            "type": "string",
                            "example": "https://example.com/avatar.jpg"
                          },
                          "coverImage": {
                            "type": "string",
                            "example": "https://example.com/cover.jpg"
                          },
                          "totalFollowers": {
                            "type": "integer",
                            "example": 1000
                          },
                          "featured": {
                            "type": "boolean",
                            "example": true
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "message": {
                      "type": "string",
                      "example": "Internal Server Error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/register": {
      "post": {
        "summary": "Register a new user",
        "description": "Registers a new user with the provided email, name, username, and address",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "john.doe@example.com"
                  },
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "username": {
                    "type": "string",
                    "example": "johndoe"
                  },
                  "address": {
                    "type": "string",
                    "example": "0x1234567890abcdef"
                  },
                  "accountType": {
                    "type": "string",
                    "example": "USER"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "123e4567-e89b-12d3-a456-426614174000"
                        },
                        "email": {
                          "type": "string",
                          "example": "john.doe@example.com"
                        },
                        "name": {
                          "type": "string",
                          "example": "John Doe"
                        },
                        "username": {
                          "type": "string",
                          "example": "johndoe"
                        },
                        "address": {
                          "type": "string",
                          "example": "0x1234567890abcdef"
                        },
                        "accountType": {
                          "type": "string",
                          "example": "USER"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "Invalid input data"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/follow": {
      "post": {
        "summary": "Follow a user",
        "description": "Allows a user to follow another user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userAddress": {
                    "type": "string",
                    "example": "0x1234567890abcdef"
                  },
                  "targetAddress": {
                    "type": "string",
                    "example": "0xabcdef1234567890"
                  }
                },
                "required": ["userAddress", "targetAddress"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number",
                          "example": 1
                        },
                        "followerId": {
                          "type": "string",
                          "example": "123e4567-e89b-12d3-a456-426614174000"
                        },
                        "followingId": {
                          "type": "string",
                          "example": "987fdebc-a654-3210-9876-543210987654"
                        },
                        "createdAt": {
                          "type": "string",
                          "example": "2021-01-01T00:00:00Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "User not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/ai/generate-caption": {
      "post": {
        "summary": "Generate AI caption",
        "description": "Generates a caption and hashtags based on the provided description and tone",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "description": {
                    "type": "string",
                    "example": "A sunset photo at the beach"
                  },
                  "tone": {
                    "type": "string",
                    "example": "inspirational"
                  },
                  "totalHashtags": {
                    "type": "number",
                    "example": 5
                  }
                },
                "required": ["description", "tone", "totalHashtags"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "caption": {
                      "type": "string",
                      "example": "Nature's canvas paints a masterpiece as the sun bids farewell, reminding us that every ending brings a beautiful new beginning."
                    },
                    "hashtags": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "example": [
                        "#sunset",
                        "#beachvibes",
                        "#naturephotography",
                        "#inspiration",
                        "#peaceful"
                      ]
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "message": {
                      "type": "string",
                      "example": "Internal Server Error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
